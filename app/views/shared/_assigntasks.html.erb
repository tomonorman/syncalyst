<div class="d-flex justify-content-between align-items-center">
  <h2 style="font-size: 24px">
    <%= @meeting.title %> |
    <span style="font-size: 20px;"><%= @meeting.date_time.strftime("%A, %d %b %Y at %l:%M %p") %></span><span style="font-style:italic;"><span class="ml-3" style="font-size: 16px; ">
        <%= @meeting.duration%> mins.</span></span></h2>
  <div class="trello-btn">
    <% if @meeting.trello_board == "" %>
       <p>""</p>
    <% else %>
      <%= link_to 'Trello board linked', @meeting.trello_board, target: "_blank", class: "btn btn-secondary mb-2" %>
    <% end %>
  </div>
  <p class="mb-1">Hosted By:
    <%= cl_image_tag "#{@meeting.user.photo.key}", alt: "alttext", class: "avatar" %>
  </p>
</div>

<div class="agenda-card">
  <div class="agenda">
    <div class="heading d-flex justify-content-between">
      <div class="finish-actions">
        <!-- Back to Dashboard -->

        <%= link_to meetings_path, class: "btn btn-primary m-1"  do %>
          <i class="fas fa-door-open"> </i>
        <% end %>
        <!--  pdf generator -->
        <%= link_to meeting_report_path(format: :pdf), target: :_blank, class: "btn btn-primary m-1" do %>
          <i class="fas fa-file-download"></i>
        <% end %>
        <!-- share through email -->
        <% team_email = [] %>
        <% @meeting.attendances.each do |attendance| %>
          <% team_email << attendance.user.email %>
        <% end %>
        <% emails = team_email.join(', ') %>
        <% subject = @meeting.date_time.strftime('%Y%m%d') + '_Minutes: ' + @meeting.title %>
        <% host_email = @meeting.user.email %>
        <% link = "(https://www.syncalyst.com/meetings/#{@meeting.id}/report.pdf)" %>
        <% body =  "Hi all,\nThank you for time in the meeting just now.\n\nThe minutes is ready for this meeting: #{@meeting.title}.\n\nPlease find the PDF document from this link: https://www.syncalyst.com/meetings/#{@meeting.id}/report.pdf.\n\nHave a nice day.\n\n(This is an email generated by Syncalyst.)" %>
        <%= mail_to emails, subject: subject, cc: host_email, body: body, reply_to: host_email, class: 'btn btn-primary m-1' do %>
          <i class="far fa-envelope"></i>
        <% end %>

      </div>
    </div>
  </div>
  <div class="agenda progress-container">
    <ol class="row justify-content-center postitul progress-tracker">
      <% i = 0 %>
      <% @meeting.agendas.each do |agenda| %>
        <li id='<%= "agenda#{i}" %>' class="postit progress-step">
          <div class="postit-card d-flex flex-column justify-content-center">
            <div class="progress-marker"><%= i+=1 %></div>
            <div class="progress-text"><%= agenda.title %></div>

            <% if agenda.audio.attached? %>
              <% url = cl_video_path(agenda.audio.key) %>
              <audio controls class="audio" style="width: 100%;">
                <source src="<%= url %>" type="audio/mpeg">
                Your browser does not support the audio tag.
              </audio>
            <% end %>
          </div>
        </li>
      <% end %>
    </ol>
  </div>


  <div class="d-flex justify-content-center">
    <div class="meeting-table" style="background-image: url('<%= asset_path 'table.jpg' %>');">
      <div class="mtgtableattendee">
        <%= cl_image_tag "#{@meeting.user.photo.key}", alt: "alttext", class: "avatar-large mx-1 align-self-start" %>
      </div>
      <% @meeting.attendances.each do |attendance| %>
        <% if attendance.user.photo.attached? %>
          <div class="mtgtableattendee">
            <%= cl_image_tag "#{attendance.user.photo.key}", alt: "alttext", class: "avatar-large mx-1 align-self-start" %>
          </div>
        <% else %>
          <div class="mtgtableattendee">
            <%= image_tag "avatar.jpg", alt: "avatar", class: 'avatar-large mx-1 align-self-start' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div id="taskhidden"></div>
