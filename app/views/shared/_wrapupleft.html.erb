<div class="d-flex justify-content-end">
  <div class="inprogress-card mt-4">
    <h2>Let's wrap up!</h2>
    <% @meeting.attendances.each do |attendance|  %>
      <!-- <div class="wrapup-list-item"> -->
      <div class="d-flex justify-content-between align-items-center">
        <% if attendance.user.photo.attached? %>
          <%= cl_image_tag "#{attendance.user.photo.key}", alt: "alttext", class: "avatar mr-2" %>
        <% else %>
          <%= image_tag "avatar.jpg", alt: "avatar", class: 'avatar mr-2' %>
        <% end %>
        <div class="task-form">
          <%= simple_form_for([@meeting, @task]) do |f| %>
            <%= f.input :user_id, label: false , :input_html => { :value => attendance.user.id, "data-trelloid" => attendance.user.trello_member_id, "data-meeting" => attendance.meeting.title, :type => 'hidden' } %>
            <%= f.input :description, placeholder: "Press enter to assign task to #{attendance.user.nickname}", label: false, class: "task-description" %>
          <% end %>
        </div>
      </div>
      <!-- </div> -->
    <% end %>
    <div class="task-heading d-flex justify-content-between align-items-center">
      <h2>Task list</h2>
    </div>
    <div class="task-list mt-4">
      <% @meeting.tasks.each do |task| %>
        <div class="task-cards d-flex justify-content-between btn btn-secondary align-items-center m-1">
          <div class="avatar d-flex justify-content-start align-items-center">
            <% if task.user.photo.attached? %>
              <%= cl_image_tag "#{task.user.photo.key}", alt: "alttext", class: "avatar mx-1" %>
            <% else %>
              <%= image_tag "avatar.jpg", alt: "avatar", class: 'avatar mx-1' %>
            <% end %>
            <%= task.user.nickname %>
          </div>
          <div class="task-info">
            <%= task.description %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to "Finish", meeting_summary_path(@meeting), class: "btn btn-primary mt-4"  %>
    </div>
  </div>
</div>
<div id="taskhidden"></div>